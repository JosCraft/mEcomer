<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/backbround_gradient"
    tools:context=".Activity.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:contentDescription="User profile picture"
            android:scaleType="centerCrop"
            android:src="@mipmap/imgusuario"
            android:background="@drawable/circle_border"
            android:padding="4dp" />

        <!-- User Information Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Name Section -->
            <TextView
                android:id="@+id/profile_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="John Doe"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Address Section -->
            <TextView
                android:id="@+id/profile_address_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Address"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="123 Main Street, City, Country"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Phone Section -->
            <TextView
                android:id="@+id/profile_phone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Phone"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="+123 456 789"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Email Section -->
            <TextView
                android:id="@+id/profile_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="john.doe@example.com"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor de los botones de navegaciÃ³n -->
    <LinearLayout
        android:id="@+id/navigation_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:drawableLeft="@drawable/ic_home"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedidos"
            android:drawableLeft="@drawable/ic_car"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:drawableLeft="@drawable/ic_profile"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:textColor="@android:color/black" />
        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:drawableLeft="@drawable/id_power"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
